---
import BaseLayout from "../layouts/Base.astro";
import PageLayout from "../layouts/Page.astro";

import flakeImage from "../content/projects/anywhy-flake.jpg";
import axseemDotMeImage from "../content/projects/axseemdotme.png";

import type { Props as ProjectProps } from "../components/Project.astro";
import Project from "../components/Project.astro";

const projects: ProjectProps[] = [
    {
        title: "Anywhy Flake",
        description:
            "An open-source, wireless, split ergonomic keyboard designed to be productive, healthy, and enjoyable",
        image: flakeImage,
        tags: ["KiCad", "FreeCAD", "Hardware"],
        url: "https://github.com/anywhy-io/flake",
    },
    {
        title: "axseem.me",
        description:
            "Simple and stylish personal website (you're using it right now)",
        image: axseemDotMeImage,
        tags: ["Typescript", "Astro", "Web"],
        url: "https://github.com/axseem/website",
    },
];
---

<BaseLayout title="axseem's projects">
    <PageLayout>
        <h1 class="mono"># projects</h1>
        <ul>
            {
                projects.map((project) => (
                    <li>
                        <Project {...project} />
                    </li>
                ))
            }
        </ul>
    </PageLayout>
</BaseLayout>

<style>
    ul {
        list-style-type: none;
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }
    li {
        margin: 0;
    }
</style>
