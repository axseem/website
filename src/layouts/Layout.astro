---
import "../styles/global.css";
import "@fontsource-variable/inter";
const { title = "@axseem" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body
		class="bg-black text-neutral-200 flex flex-col items-center min-h-screen overflow-y-scroll px-1 sm:px-2 pb-12"
	>
	<div class="flex flex-col w-full max-w-56 h-full">
		<slot />
	</div>
	</body>
</html>
