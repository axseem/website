---
import { Image } from "astro:assets";

export interface Props {
    title: string
    description: string
    image: ImageMetadata
    tags: string[]
    url: string,
}

const { title, description, image, tags, url } = Astro.props;

let stars = -1;
const repoMatch = url.match(/github\.com\/([^\/]+\/[^\/]+)/);
if (repoMatch) {
    try {
        const response = await fetch(`https://api.github.com/repos/${repoMatch[1]}`);
        if (response.ok) {
            const data = await response.json();
            stars = data.stargazers_count || 0;
        }
    } catch (error) {
        console.error(`GitHub API request failed for ${url}:`, error);
    }
}
---

<a href={url} >
    <Image src={image} alt={title + " image"}/>
    <div class="meta">
        <h2>{title}</h2>
        <p class="muted"><em>{description}</em></p>
        {(stars != -1) &&
            (<div class="stars">
                <svg aria-hidden="true" height="16" viewBox="0 0 16 16" version="1.1" width="16" data-view-component="true">
                    <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Zm0 2.445L6.615 5.5a.75.75 0 0 1-.564.41l-3.097.45 2.24 2.184a.75.75 0 0 1 .216.664l-.528 3.084 2.769-1.456a.75.75 0 0 1 .698 0l2.77 1.456-.53-3.084a.75.75 0 0 1 .216-.664l2.24-2.183-3.096-.45a.75.75 0 0 1-.564-.41L8 2.694Z"></path>
                </svg>
                <p class="leading-1 group-hover:text-gray-0" id="stars">
                    {stars.toLocaleString() + " stars"}
                </p>
            </div>)
        }
    </div>
</a>

<style>
.meta {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}
.stars {
  display: flex;
  gap: 0.5rem;
  align-items: center;
}
* {
  margin: 0;
}
svg{
  fill: var(--fg);
}
a {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  text-decoration: none;
}
a:hover h2 {
  text-decoration: underline;
}
</style>
